# Production Environment Configuration
# Copy this file to .env.production and update the values for your production environment

# NextAuth.js configuration
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-very-secure-secret-key-for-production-use-minimum-32-characters

# Backend configuration
BACKEND_URL=http://fastapi:8000
NEXT_PUBLIC_BACKEND_URL=https://yourdomain.com/api/v1

# Database configuration
DATABASE_URL=postgresql://pm_user:pm_password@pm_postgres_db:5432/pm_database

# Security keys
SECRET_KEY=your-backend-secret-key-here

# Node environment
NODE_ENV=production

# Optional: SSL configuration
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem