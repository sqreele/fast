FROM node:20-alpine

WORKDIR /app

# Install curl for health checks
RUN apk add --no-cache curl

# Get current user ID to avoid permission issues
ARG USER_ID=1000
ARG GROUP_ID=1000

# Create user and group with better error handling
RUN set -eux; \
    # Remove existing user/group if they exist with the same IDs
    if getent group ${GROUP_ID} > /dev/null 2>&1; then \
        existing_group=$(getent group ${GROUP_ID} | cut -d: -f1); \
        if [ "$existing_group" != "nodejs" ]; then \
            delgroup "$existing_group" || true; \
        fi; \
    fi; \
    if getent passwd ${USER_ID} > /dev/null 2>&1; then \
        existing_user=$(getent passwd ${USER_ID} | cut -d: -f1); \
        if [ "$existing_user" != "nextjs" ]; then \
            deluser "$existing_user" || true; \
        fi; \
    fi; \
    # Create group and user
    addgroup -g ${GROUP_ID} -S nodejs || true; \
    adduser -u ${USER_ID} -S nextjs -G nodejs || true

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm ci

# Change ownership of the app directory
RUN chown -R nextjs:nodejs /app

# Switch to the non-root user
USER nextjs

EXPOSE 3000

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3000 || exit 1

CMD ["npm", "run", "dev"]
