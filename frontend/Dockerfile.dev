FROM node:20-alpine

WORKDIR /app

# Install curl for health checks
RUN apk add --no-cache curl

# Get current user ID to avoid permission issues
ARG USER_ID=1000
ARG GROUP_ID=1000

# Create user and group
RUN addgroup -g ${GROUP_ID} -S nodejs && \
    adduser -u ${USER_ID} -S nextjs -G nodejs

# Copy package.json and package-lock.json first
COPY --chown=nextjs:nodejs package*.json ./

# Install dependencies as nextjs user
USER nextjs
RUN npm ci

# Copy the rest of the application code
COPY --chown=nextjs:nodejs . .

# Ensure nextjs user owns everything in /app
USER root
RUN chown -R nextjs:nodejs /app && \
    chmod -R 755 /app

# Switch back to nextjs user
USER nextjs

EXPOSE 3000

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3000 || exit 1

CMD ["npm", "run", "dev"]
